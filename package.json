{
  "name": "code-maker",
  "displayName": "Code Maker",
  "description": "一款可以工程化生成模板代码片段的VSCode插件",
  "keywords": [
    "code",
    "maker",
    "helper",
    "plugin"
  ],
  "version": "2.1.1",
  "publisher": "gengjian1203",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gengjian1203/code-maker"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/mapx.json"
      }
    ],
    "commands": [
      {
        "command": "code-maker.base.CloneTemplate",
        "title": "🎉 拉取模板代码"
      },
      {
        "command": "code-maker.base.QuickOpenFolder",
        "title": "🎯 快速打开目录"
      },
      {
        "command": "code-maker.base.ReviewAsset",
        "title": "🔍️ 检查资源情况",
        "when": "explorerResourceIsFolder == true"
      },
      {
        "command": "code-maker.base.OpenTemplate",
        "title": "查看本地模板代码",
        "icon": {
          "light": "./images/icon.svg",
          "dark": "./images/icon.svg"
        }
      },
      {
        "command": "code-maker.editor.InjectTestId",
        "title": "💉 注入testId"
      },
      {
        "command": "code-maker.zzz.DemoTest",
        "title": "Code Maker 测试代码"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "code-maker.base.CloneTemplate",
          "group": "navigation@1"
        },
        {
          "command": "code-maker.base.QuickOpenFolder",
          "group": "navigation@2",
          "when": "explorerResourceIsFolder == true"
        },
        {
          "command": "code-maker.base.ReviewAsset",
          "group": "navigation@3",
          "when": "explorerResourceIsFolder == true"
        }
      ],
      "view/item/context": [],
      "editor/context": [],
      "editor/title": [
        {
          "command": "code-maker.base.OpenTemplate",
          "group": "navigation"
        }
      ],
      "editor/title/context": []
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coder-maker-sidebar",
          "title": "Code Maker",
          "icon": "./images/icon.svg"
        }
      ]
    },
    "views": {
      "coder-maker-sidebar": [
        {
          "type": "webview",
          "id": "coder-maker-npm-manager",
          "name": "npm包管理情况",
          "icon": "./images/icon.svg",
          "contextualTitle": "npm包管理情况"
        },
        {
          "id": "coder-maker-bk",
          "name": "模块备份"
        }
      ]
    },
    "webviews": [],
    "configuration": [
      {
        "type": "object",
        "title": "Code Maker",
        "properties": {
          "code-maker.config.gitTemplateUrl": {
            "order": 1,
            "type": "string",
            "default": "https://gitee.com/gengjian1203/code-template.git",
            "markdownDescription": "模板代码仓库url"
          },
          "code-maker.config.gitTemplatePath": {
            "order": 2,
            "type": "string",
            "default": "templates",
            "markdownDescription": "模板代码仓库模板路径"
          },
          "code-maker.config.localTemplatePath": {
            "order": 3,
            "type": "string",
            "default": "tpl",
            "markdownDescription": "本地存放模板路径"
          },
          "code-maker.reviewAsset.assetExtensions": {
            "order": 4,
            "type": "string",
            "default": ".jpeg|.jpg|.png|.gif|.bmp|.tiff|.tif|.ttf|.ttc|.otf|.woff|.woff2|.eot|.fon|.font|.svg",
            "markdownDescription": "需要检验资源的拓展名列表"
          }
        }
      }
    ]
  },
  "permissions": [
    "git"
  ],
  "scripts": {
    "dev": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
    "vsce": "vsce package",
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vsce": "^2.15.0",
    "vscode-test": "^1.4.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "domhandler": "^5.0.3",
    "htmlparser2": "^10.0.0",
    "inquirer": "^7.3.3"
  }
}
