{
  "name": "code-maker",
  "displayName": "Code Maker",
  "description": "一款可以工程化生成模板代码片段的VSCode插件",
  "keywords": [
    "code",
    "maker",
    "helper",
    "plugin",
    "taro"
  ],
  "version": "1.2.0",
  "publisher": "gengjian1203",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gengjian1203/code-maker"
  },
  "activationEvents": [
    "onCommand:code-maker.base.CloneTemplate",
    "onCommand:code-maker.base.QuickOpenFolder",
    "onCommand:code-maker.base.OpenTemplate"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/mapx.json"
      }
    ],
    "commands": [
      {
        "command": "code-maker.base.CloneTemplate",
        "title": "🎉 拉取模板代码"
      },
      {
        "command": "code-maker.base.QuickOpenFolder",
        "title": "🎯 快速打开工作区"
      },
      {
        "command": "code-maker.base.OpenTemplate",
        "title": "查看本地模板代码",
        "icon": {
          "light": "./images/icon.svg",
          "dark": "./images/icon.svg"
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "code-maker.base.CloneTemplate",
          "group": "navigation@1"
        },
        {
          "command": "code-maker.base.QuickOpenFolder",
          "group": "navigation@2",
          "when": "explorerResourceIsFolder == true"
        }
      ],
      "view/item/context": [],
      "editor/context": [],
      "editor/title": [
        {
          "command": "code-maker.base.OpenTemplate",
          "group": "navigation"
        }
      ],
      "editor/title/context": []
    },
    "viewsContainers": {
      "activitybar": []
    },
    "views": {},
    "configuration": [
      {
        "type": "object",
        "title": "Code Maker",
        "properties": {
          "code-maker.config.gitTemplateUrl": {
            "order": 1,
            "type": "string",
            "default": "https://gitee.com/gengjian1203/code-template.git",
            "markdownDescription": "代码仓库url"
          },
          "code-maker.config.gitTemplatePath": {
            "order": 2,
            "type": "string",
            "default": "templates",
            "markdownDescription": "代码仓库模板路径"
          },
          "code-maker.config.localTemplatePath": {
            "order": 3,
            "type": "string",
            "default": "tpl",
            "markdownDescription": "本地存放模板路径"
          }
        }
      }
    ]
  },
  "permissions": [
    "git"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "vsce": "vsce package",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vsce": "^2.15.0",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "inquirer": "^7.3.3"
  }
}
